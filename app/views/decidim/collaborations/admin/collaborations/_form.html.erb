<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column" >
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column" >
      <%= form.translated :editor, :description %>
    </div>

    <div class="row column">
      <%= form.number_field :maximum_authorized_amount, step: 1, min: 0 %>
    </div>

    <div class="row column">
      <%= form.number_field :target_amount, step: 1, min: 0 %>
    </div>

    <div class="row column">
      <%= form.select :default_amount, amount_options %>
    </div>

    <div class="row column">
      <%= form.date_field :active_until %>
    </div>


  </div>
</div>